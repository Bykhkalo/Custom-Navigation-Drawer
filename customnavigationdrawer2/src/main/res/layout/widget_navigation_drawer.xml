<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="@android:color/white"
    tools:parentTag="android.widget.RelativeLayout"
    >
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/menuSV"
            android:paddingTop="100dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:layout_weight="0.85">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:id="@+id/menuLL">

            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/limiter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </RelativeLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/containerCV"
        app:cardBackgroundColor="#fcfcfc"
        android:focusable="true">
        <LinearLayout
            android:id="@+id/appBarParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appBarRL"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@android:color/black"
                android:id="@+id/menuIV"
                android:contentDescription="@string/navigation_button_description"
                android:src="@drawable/asl_pathmorph_drawer"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:id="@+id/appBarTitleTV"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/appbar_text"/>
        </RelativeLayout>
            <view class="com.shrikanthravi.customnavigationdrawer2.widget.SNavigationDrawer$MyLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/containerLL"
                android:orientation="vertical">

            </view>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</merge>